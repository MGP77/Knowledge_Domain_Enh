# Конфигурация web-сервиса
DEBUG=false
HOST=0.0.0.0
PORT=8005

# GigaChat Embeddings
GIGACHAT_EMBEDDING_MODEL=EmbeddingsGigaR

# GigaChat mTLS сертификаты
MTLS_CLIENT_CERT=../certificates/cert.pem
MTLS_CLIENT_KEY=../certificates/key.pem
MTLS_VERIFY_SSL=false

# Chroma векторная база данных
CHROMA_DB_PATH=./storage/chroma_db

# Настройки RAG
CHUNK_SIZE=1024
CHUNK_OVERLAP=200
MAX_SEARCH_RESULTS=5

# Загрузка файлов
UPLOAD_FOLDER=./storage/uploads
MAX_FILE_SIZE=52428800

# Настройки чата
CHAT_TEMPERATURE=0.3
CHAT_MAX_TOKENS=2000

# Confluence настройки
CONFLUENCE_TIMEOUT=30

# Безопасность
SECRET_KEY=change-me-in-production-environment
